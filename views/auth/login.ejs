<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <div class="form-control">
                <p class="right1">Already selling on eSell? Get Started</p>
                <label for="email">E-Mail</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>"
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password
                </label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= oldInput.password %>">
            </div>
            
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="right2">
                <a class="Forgotten" href="/reset">Forgot your password?</a>
            </div>
            <button class="btn" type="submit">Sign in</button>

        </form>
        <div class="centered">
             <p class="right3">
                <b>
                  <a
                    class="register"
                    href="/signup"
                    >New to selling on eSell?</a></b>
              </p>
        </div>
    </main>
<%- include('../includes/end.ejs') %>